<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        >
    <TextView
        android:id="@+id/d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register\naccount"
        android:textSize="40dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:fontFamily="@font/font1"
        android:layout_marginTop="30dp"
        />

    <LinearLayout
        android:id="@+id/lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp"
        android:layout_marginTop="30dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:text="Email"
            android:textStyle="normal"
            android:fontFamily="@font/font1"
            android:layout_marginTop="5dp"
            />
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_shade"
            android:textStyle="normal"
            android:textSize="22dp"
            android:fontFamily="@font/font1"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:hint="Type Your Email"
            android:inputType="textEmailAddress"
            android:text="nafiz2755@gmail.com"


            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:fontFamily="@font/font1"

            android:textColor="@color/black"
            android:text="Password"
            android:textStyle="normal"
            android:layout_marginTop="15dp"
            />
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_shade"
            android:textStyle="normal"
            android:textSize="22dp"
            android:fontFamily="@font/font1"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:hint="Type Your Password"
            android:inputType="textPassword"
            android:text="s5S12#dd"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:fontFamily="@font/font1"
            android:textColor="@color/black"
            android:text="Continue Password"
            android:textStyle="normal"
            android:layout_marginTop="15dp"
            />
        <EditText
            android:id="@+id/con_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_shade"
            android:textStyle="normal"
            android:textSize="22dp"
            android:fontFamily="@font/font1"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:hint="Type Your Password again"
            android:inputType="textPassword"
            android:text="s5S12#dd"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:text="Nick Name"
            android:textStyle="normal"
            android:fontFamily="@font/font1"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_shade"
            android:textStyle="normal"
            android:textSize="22dp"
            android:fontFamily="@font/font1"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:hint="Type Your name"
            android:inputType="text"
            android:text="Nafiz Ahmed"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:text="Address"
            android:textStyle="normal"
            android:fontFamily="@font/font1"
            android:layout_marginTop="5dp"
            />
        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_shade"
            android:textStyle="normal"
            android:textSize="22dp"
            android:fontFamily="@font/font1"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:hint="Type Your address"
            android:inputType="textMultiLine"
            android:text="Dhaka"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:text="Phone"
            android:textStyle="normal"
            android:fontFamily="@font/font1"
            android:layout_marginTop="5dp"
            />
        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_shade"
            android:textStyle="normal"
            android:textSize="22dp"
            android:fontFamily="@font/font1"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:hint="Type Your Phone"
            android:inputType="textMultiLine"
            android:text="01615419931"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:text="Age"
            android:textStyle="normal"
            android:fontFamily="@font/font1"
            android:layout_marginTop="5dp"
            />
        <EditText
            android:id="@+id/age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_shade"
            android:textStyle="normal"
            android:textSize="22dp"
            android:fontFamily="@font/font1"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:hint="Type Your Phone"
            android:inputType="textMultiLine"
            android:text="20"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:text="Gender"
            android:textStyle="normal"
            android:fontFamily="@font/font1"
            android:layout_marginTop="5dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"

            >

            <RadioGroup
                android:id="@+id/gender_groop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bottom_shade"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingLeft="5dp"
                >

                <RadioButton
                    android:id="@+id/radio_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textSize="16dp"
                    />

                <RadioButton
                    android:id="@+id/radio_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:textSize="16dp"
                    />

            </RadioGroup>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:text="Date Off Birth"
            android:textStyle="normal"
            android:fontFamily="@font/font1"
            android:layout_marginTop="5dp"
            />
        <EditText
            android:id="@+id/birthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_shade"
            android:textStyle="normal"
            android:textSize="22dp"
            android:fontFamily="@font/font1"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:hint="Type Your Phone"
            android:inputType="textMultiLine"
            android:text="11/12/2002"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:text="About Yourself"
            android:textStyle="normal"
            android:fontFamily="@font/font1"
            android:layout_marginTop="5dp"
            />
        <EditText
            android:id="@+id/yoursalf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_shade"
            android:textStyle="normal"
            android:textSize="22dp"
            android:fontFamily="@font/font1"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:hint="Type Your Phone"
            android:inputType="textMultiLine"
            android:text="11/12/2002"
            />







        <LinearLayout
            android:id="@+id/checkbox_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:visibility="gone"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                >


               <TextView
                   android:id="@+id/one_number"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="· One number"
                   android:textSize="12dp"
                   android:paddingTop="3dp"
                   android:paddingBottom="3dp"
                   />

                <TextView
                    android:id="@+id/lowercase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="· lowercase leer"
                    android:textSize="12dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    />

                <TextView
                    android:id="@+id/count_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="· 8-50 Charecers"
                    android:textSize="12dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/one_simble"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="· One symbol"
                    android:textSize="12dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    />

                <TextView
                    android:id="@+id/uppercase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="· Uppercase leer"
                    android:textSize="12dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    />

                <TextView
                    android:id="@+id/latter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="· One latin letter"
                    android:textSize="12dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    />

            </LinearLayout>


        </LinearLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#88000000"
            android:text="Forget Password?"
            android:textStyle="normal"
            android:layout_marginTop="15dp"
            android:gravity="right"
            android:fontFamily="@font/font1"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="7dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#AB000000"
                android:text="read a "
                android:textStyle="normal"
                android:fontFamily="@font/font1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#2196F3"
                android:text="private polic"
                android:textStyle="normal"
                android:fontFamily="@font/font1"
                />


        </LinearLayout>


        <TextView
            android:id="@+id/log_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Register"
            android:background="@drawable/sine"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/font1"
            />




    </LinearLayout>



    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Or Sign Up Using"
        android:gravity="center"
        android:textSize="15dp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:src="@drawable/googl" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:src="@drawable/facebook" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:src="@drawable/twitter" />


    </LinearLayout>

    </LinearLayout>
    </ScrollView>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:lottie_rawRes="@raw/loading_hand"
        app:lottie_autoPlay="true"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:lottie_loop="true"/>

</RelativeLayout>